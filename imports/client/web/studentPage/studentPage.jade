template(name="studentPage")
  unless isInRole "mentor"
    +mustBeMentor
  else
    with student
      +studentPageDisplay
    
template(name="studentOwnPage")
  with student
    +studentPageDisplay
    
template(name="studentPageDisplay")
  .ui.text.container
    h2.header #{name}
    +activityGraph(userId=_id)
    .ui.list
      each submissionsPage(page)
        +submissionDisplay
    button.ui.right.floated.button($b="click : showMore") Mehr
