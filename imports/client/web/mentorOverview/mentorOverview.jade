template(name="mentorOverview")
  unless isInRole "mentor"
    +mustBeMentor
  else
    .ui.text.container
      each schoolClasses
        +schoolClassListDisplay

template(name="schoolClassListDisplay")
  button.ui.right.floated.icon.button($b="click : newGraph")
    i.bar.chart.icon
    |Grafik hinzuf√ºgen
  h2.header($b="text : name")
  each activityGraphs
    +schoolClassActivityGraph  
  .ui.segment
    .ui.relaxed.list
      each students
        +studentListDisplay
  .ui.hidden.divider

template(name="studentListDisplay")
  .item
    .right.floated.content
      a.ui.circular.icon.button($b="attr : {href : mailLink}")
        if mailVerified
          i.green.mail.outline.icon
        else
          i.orange.mail.outline.icon
      .ui.circular.icon.button($b="click : gotoStudentPage")
        i.bar.graph.icon
      .ui.circular.icon.button($b="click : gotoStudentChat, class : {red : hasUnreadMessagesFromStudent}")
        i.comments.outline.icon($b="class : shaking")
    i.large.middle.aligned.user.icon($b="class : userColor")
    .content
      .header($b="text : name")
      .description($b="text : timeAgo")
    
