template(name="submissionsList")
  .ui.relaxed.selection.list
    each submissions
      +submissionDisplay
       
template(name="submissionDisplay")
  .item($b="ref : element")
    .ui.segment
      .content
        .header #{moduleTitle}, Level #{level}
        .description($b="text : timeAgo")
        .ui.segment
          h3.ui.header #{description}
          +teXDisplay(teX=problem)
          //- +mathjax
          //-   div $$#{problem}$$
        .ui.center.aligned.inverted.segment($b="class : answerSegmentClass") #{answer}
      
