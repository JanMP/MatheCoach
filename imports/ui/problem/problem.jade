template(name="problem")
  .ui.text.container
    h2.header($b="text : title")
    .ui.segment
      h3.header($b="text : description")
      p.tex($b="html : problemHtml")
      p($b="text : hint")
    .ui.segment
      h3.header Antwort:
      .ui.fluid.input
        input($b="value : answer, enter : checkAnswer" placeholder="Deine Antwor (als Bruch oder Term)" type="text")
    if answered
      if answerCorrect
        .ui.green.inverted.center.aligned.segment
          h1.header Richtig!
      else
        .ui.red.inverted.center.aligned.segment
          h2.header Dein Ergebnis ist leider falsch.
      .ui.segment
        h3.header Lösung:
        p.tex($b="html : solutionHtml")
        
    button.ui.right.floated.icon.button($b="click : newProblem") nächste Aufgabe
      i.arrow.right.icon
